{
    "name": "kusabi/stream",
    "description": "A PSR-7 and PSR-17 conforming stream wrapper library for PHP",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Christian Harvey",
            "email": "kusabi.software@gmail.com"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^7.0",
        "psr/http-factory": "^1.0",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "symfony/var-dumper": "^3.4",
        "phan/phan": "^1.2",
        "phpunit/phpunit": "^6.5",
        "friendsofphp/php-cs-fixer": "^2.15"
    },
    "autoload": {
        "psr-4": {
            "Kusabi\\Stream\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
